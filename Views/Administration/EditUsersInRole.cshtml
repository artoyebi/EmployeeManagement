@model List<UserRoleViewModel>

@{ 
    ViewBag.Title = "Edit User in Role";
    var roleId = ViewBag.roleId;
}

<form  action="EditUsersInRole" method="post">
    <div class="card mt-4">
        <div class="card-header">
            <h2>Add or remove users from this role</h2>
        </div>
        <div class="card-body">
             @for (int i = 0; i < Model.Count; i++)
             {
                <div class="form-check m-1">
                    <input hidden asp-for="@Model[i].UserName" />
                    <input hidden asp-for="@Model[i].UserId" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model[i].IsSelected" class="form-check-label">
                        @Model[i].UserName
                    </label>
                </div>
             }
        </div>
        <div class="card-footer">
            <input type="text" name="roleId" value="@roleId" hidden />
            <input type="submit"  value="Update" class="btn btn-primary" style="width: auto"/>
            <a asp-action="editrole" asp-route-id="@roleId" class="btn btn-primary" style="width: auto">Cancel</a>
        </div>
    </div>
</form>

